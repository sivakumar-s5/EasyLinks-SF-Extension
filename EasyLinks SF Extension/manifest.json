{
    "manifest_version": 3,
    "name": "EasyLinks Salesforce By SK",
    "version": "2.0",
    "description": "Adds a right-click option to open a developer console,setup and so on.",
    "permissions": [
      "contextMenus",
      "tabs",
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "EasyLinks SF"
    },
    "commands": {
    "openDevConsole": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open Salesforce Developer Console"
    },
    "openSetup": {
       "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open Salesforce Setup Page"

      }
    },

    "icons": {
      "16": "icons/salesforce_icon_16.png",
      "32": "icons/salesforce_icon_32.png",
      "48": "icons/salesforce_icon_48.png",
      "128": "icons/salesforce_icon_128.png"
  }
  }
  